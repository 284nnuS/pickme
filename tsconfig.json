{
   "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "baseUrl": ".",
      "typeRoots": ["./server/types", "./types"],
      "paths": {
         "~/*": ["./*"]
      }
   },
   "ts-node": {
      "files": true
   },
   "files": ["global.d.ts"],
   "exclude": ["node_modules"],
   "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "src/components/PickmeCard.jsx",
      "src/components/SegmentedControl.jsx"
   ]
}
